<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<link rel="stylesheet" href="/stylesheets/search.css">

<body>
    <main>  
        <%- include("./partials/header.ejs")%>
          
        <div class="products-details-container">

            <% if(resultado.length <= 0) { %>

                <h3>No encontramos bebidas</h3>
                
                <%  }  else{ %>

                <h3>Este es el resultado de tu busqueda:</h3>    

                <%  } %>

            <% for (let i = 0; i < resultado.length; i++) { %>
                <a  href="/products/ <%=resultado.id%> " class="aProduct">
                    <div class="product-container">
                        
                         <div class="product-container-left">
                            <img src="" alt="" class="product-container-image">
                        </div>
                        <div class="product-container-right">
    
                            <h4 class="product-container-title"><%= resultado.name %></h4>
                            <p class="product-container-category"></p>
                            <p class="product-container-price">$<%= resultado.price %></p>
                             
                        </div>
                    </a>
                <%  } %>
        </div>
        <%- include("./partials/footer.ejs") %>
    </main>
    
</body>
</html>