<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<link rel="stylesheet" href="/stylesheets/search.css">

<body>
    <main>  
        <%- include("./partials/header.ejs")%>
          
        <div class="products-details-container">

            <% if(productsResults.length <= 0) { %>

                <h3>No encontramos bebidas</h3>
                
                <%  }  else{ %>

                <h3>Este es el resultado de tu busqueda:</h3>    

                <%  } %>

            <% for (let i = 0; i < productsResults.length; i++) { %>
                <div class="product-container">
                     <div class="product-container-left">
                        <img src="" alt="" class="product-container-image">
                    </div>
                    <div class="product-container-right">
                            <h4 class="<%= productsResults[i].nombre %> "></h4>
                            <p class="<%= productsResults[i].precio %>"></p>
                            <button value="Leer mas"> <a class="product-container-addcart" href="/products/productDetail"></a> </a> </button>
                    </div>
                </div>

                <%  } %>
            
        </div>    

        <%- include("./partials/footer.ejs") %>

    </main>
    
</body>
</html>