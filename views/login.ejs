                    <br>
                    <label for="contraseña"></label>
                    <input type="password" placeholder="Ingresa tu contraseña" name="contraseña" id="contraseña">
                    <br>
                    <br>
                    <input type="submit" value="Inicia sesion" class="ingresar">
                    <br>
                    <br> 
                    <a href="/registrate"> <p>¿Olvidaste tu contraseña?</p></a>
                    <a href="/register"> <p>Crear usuario</p></a>
                </form>
            
            </section>
        </div>


        <%- include("./partials/footer.ejs") %>
    </main>
    
</body>
